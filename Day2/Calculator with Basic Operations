def calculator():
    print("Select operation: +, -, *, /")
    op = input("Operator: ")
    a = float(input("Enter first number: "))
    b = float(input("Enter second number: "))
    
    if op == '+':
        print(a + b)
    elif op == '-':
        print(a - b)
    elif op == '*':
        print(a * b)
    elif op == '/':
        if b != 0:
            print(a / b)
        else:
            print("Division by zero error")
    else:
        print("Invalid operator")

calculator()
